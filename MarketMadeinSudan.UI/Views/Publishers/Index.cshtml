@section Scripts{
    <script>
        $(function () {
            $('.deleteBtn').click(function (e) {
                swal({
                    title: "عملية حذف?",
                    text: "هل انت متاكد من عملية الحذف?",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true
                }).then((confirm) => {
                    if (confirm) {
                        var btn = $(this);
                        var id = btn.data("id");
                        $('#PublishersId').val(id);
                        $('#deleteForm').submit();
                    }
                });

            });
        });
    </script>

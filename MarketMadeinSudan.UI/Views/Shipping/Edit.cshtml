                        <input hidden="hidden" asp-for="firstNameCustoer" type="text" name="firstNameCustoer" id="firstNameCustoer" class="form-control" placeholder="NameCustoer" requied="">
                        <input hidden="hidden" asp-for="AddressCustoer" type="text" name="AddressCustoer" type="text" id="AddressCustoer" class="form-control" placeholder="AddressCustoer" requied="">
                        <input hidden="hidden" asp-for="CountryCustoer" type="text" name="CountryCustoer" id="CountryCustoer" class="form-control" placeholder="CountryCustoer" requied="">
                        <input hidden="hidden" asp-for="EmailCustoer" type="text" name="EmailCustoer" id="EmailCustoer" class="form-control" placeholder="EmailCustoer" requied="">
                        <input hidden="hidden" asp-for="PhoneCustomer" type="text" name="PhoneCustomer" id="PhoneCustomer" class="form-control" placeholder="PhoneCustomer" requied="">

                        <input hidden="hidden" asp-for="Count" type="text" name="Count" id="Count" class="form-control" placeholder="Count" requied="">
                        <input hidden="hidden" asp-for="NameCompany" type="text" name="NameCompany" id="NameCompany" class="form-control" placeholder="NameCompany" requied="">
                        <input hidden="hidden" asp-for="AddressCompany" type="text" name="AddressCompany" id="AddressCompany" class="form-control" placeholder="AddressCompany" requied="">
                        <input hidden="hidden" asp-for="EmailCompany" type="text" name="EmailCompany" id="EmailCompany" class="form-control" placeholder="EmailCompany" requied="">
                        <input hidden="hidden" asp-for="PhoneCompany" type="text" name="PhoneCompany" id="PhoneCompany" class="form-control" placeholder="PhoneCompany" requied="">
                    </div>
                    <div class="container" style="margin-top:20px;margin-top: 115px;">
                        <div class="row">
                            <div class="col-md-6 col-xs-12 col-sm-12 col-lg-6" style="padding:10px">
                                <input type="submit" value="تعديل" class="btn btn-outline-success fa fa-save col-12" style="padding:10px" />
                            </div>
                            <div class="col-md-6 col-xs-12 col-sm-12 col-lg-6" style="padding:10px">
                                <a asp-action="Index" class="btn btn-outline-info fa fa-rotate-back col-12" style="padding:10px">الرجوع للخلف</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</section>

<script type="text/javascript">
    $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });
</script>

